@model jwhitehead_FinancialPortal.Models.CodeFirst.Household
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Leave Household";
}

<h2>Leave</h2>

<h3>Are you sure you want to leave this household: @Html.DisplayFor(model => model.Name)?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Household Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Member Leaving
        </dt>

        <dd>
            <!-- John R. -->
            @{
                var userId = User.Identity.GetUserId();
                var user = Model.Users.Where(u => u.Id == userId).ToList();
                @user.FirstOrDefault().FullName;
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <a href="@Url.Action("Index","Households")" class="btn btn-success">Back to List</a>
        <input type="submit" value="Leave" class="btn btn-danger" />
    </div>
    }
</div>
