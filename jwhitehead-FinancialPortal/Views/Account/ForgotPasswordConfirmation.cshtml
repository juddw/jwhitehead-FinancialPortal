@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Forgot Password Confirmation";
}

<div id="LoginWindowBanner">
    <h2 style="color: white; font-weight: 500;">@ViewBag.Title.</h2>
</div>

<div id="loginForm" style="padding: 20px;">
    <p>
        Please check your email to reset your password.
    </p>
    <div style="text-align: center;">
        <a href="@Url.Action("Login","Account")" class="btn btn-primary" style="margin-top: 30px;">Back to Login</a>
    </div>
</div>
	
