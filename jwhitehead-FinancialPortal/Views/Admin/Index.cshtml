@model IEnumerable<jwhitehead_FinancialPortal.Models.CodeFirst.Household>

@{
    ViewBag.Title = "All Households";
}

<h2 style="margin-bottom: 30px;">All Households</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ToUserTime(item.Created, ViewBag.UserTimeZone as string, "MM-dd-yyyy, h:mm:ss tt")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

