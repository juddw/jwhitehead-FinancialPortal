@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="container-center animated slideInDown">

    <div class="panel panel-filled">
        <div class="panel-body">
            <div class="view-header">
                <div class="header-icon" style="margin-left: -12px;">
                    <i class="pe page-header-icon pe-7s-check"></i>
                </div>
                <div class="header-title" style="margin-left: -12px;">
                    <h3>Forgot Password Confirmation</h3>
                    <small style="margin-left: 70px;">
                        Password recovery
                    </small>
                </div>
            </div>
            <hr style="border-color: #faffbd" />

            <div id="loginForm" style="padding: 20px;">
                <p>
                    Please check your email to reset your password.
                </p>
                <div style="text-align: center;">
                    <a href="@Url.Action("Login","Account")" class="btn btn-accent" style="margin-top: 30px;">Back to Login</a>
                </div>
            </div>

        </div>
    </div>
</div>

