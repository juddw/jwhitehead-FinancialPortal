@model jwhitehead_FinancialPortal.Models.CodeFirst.Household

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="pull-right text-right" style="line-height: 14px">
                <small>MONEYCENTS<br>Dashboard<br> <span class="c-white">v.1.3</span></small>
            </div>
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-piggy"></i>
            </div>
            <div class="header-title">
                <h3 class="m-b-xs">MONEY<span style="font-weight: 300;">CENTS</span></h3>
                <small>
                    A financial money manager application.
                </small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-filled">
            <div class="panel-body">
                <h4>Welcome to your Dashboard</h4>
                <div class="slight m-t-sm">
                    <i class="fa fa-clock-o"> </i> Updated: <span class="c-white">@ViewBag.CurrentTime</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-2 col-xs-6">
        <div class="panel panel-filled">
            <div class="panel-body">
                <h2 class="m-b-none">
                    @ViewBag.NumberInHouse<i class="pe-7s-users text-success" style="margin-left: 10px; font-size: 30px;"></i>
                </h2>
                <div class="small" style="color: white; margin-bottom: 5px;">People in Household:</div>
               <hr />
                @*display every user who has the same HouseholdId as the current Households.Id*@
                @foreach (var user in Model.Users)
                {
                    if (user.HouseholdId == Model.Id)
                    {
                        <small>@user.FullName </small><br />
                    }
                }
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-xs-6">
        <div class="panel panel-filled">
            <div class="panel-body">
                <h2 class="m-b-none">
                    @ViewBag.TotalHouseholdAccounts<i class="pe-7s-cash text-success" style="margin-left: 10px; font-size: 30px;"></i>
                </h2>
                <div class="small">Accounts in Household</div>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-xs-6">
        <div class="panel panel-filled">
            <div class="panel-body">
                <h2 class="m-b-none">
                    @ViewBag.TotalNumberOfBudgets<i class="pe-7s-calculator text-success" style="margin-left: 10px; font-size: 30px;"></i>
                </h2>
                <div class="small">Budgets in Household</div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xs-12">
        <div class="panel panel-filled">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div style="margin-bottom: 10px;">
                            <i class="pe-7s-graph2 text-success" style="font-size: 50px;"></i>
                            <h5>
                                Total Budget Report
                            </h5>
                            <small>Below is the total expenses across all budgets for your household.</small>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-6" style="text-align: center;">
                        <h2 class="m-b-none">
                            @{ 
                                if (ViewBag.TotalUserSpending < ViewBag.TotalUserBudgets)
                                {
                                    <span style="color: forestgreen;">$@ViewBag.TotalUserSpending</span>
                                }
                                else
                                {
                                    <span style="color: red;">$@ViewBag.TotalUserSpending</span>
                                }
                            }                        
                        </h2>
                        <div class="small">Total Spent</div>
                    </div>
                    <div class="col-sm-6" style="border-left-style: solid; border-left-width: thin; border-left-color: #3d3d3d;">
                        <h2 class="m-b-none" style="text-align: center; padding-left: 5px;">
                            $@ViewBag.TotalUserBudgets
                        </h2>
                        <div class="small" style="text-align: center;">Budgeted</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

